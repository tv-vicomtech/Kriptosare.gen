###################################################################
################# Restart container API ###########################
###################################################################
1.	docker stop btc_api/zch_api

2.	docker rm btc_api/zch_api

	############BTC
3a.	docker run -d --network bitcoinnet --name btc_api btc_api /etc/init.d/script_restart.sh

	############ZCASH
3b.	docker run -d --network zcashnet --name zch_api zch_api /etc/init.d/script_restart.sh

